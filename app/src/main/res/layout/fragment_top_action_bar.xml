<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cse120.ontask.TopActionBarFragment"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal|top"
    android:background="@color/light_blue">

    <!-- TODO: Update blank fragment layout and Center Nav Button -->

    <ImageButton
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:id="@+id/navButton"
        android:background="@drawable/ic_drawer"
        android:onClick="navButtonOnClick"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/homePageTitleText"
        android:id="@+id/titleTextView"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.cse120.ontask.custom_shapes.CircleButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:onClick="addButtonOnClick"
        android:src="@drawable/ic_action_plus"
        app:cb_color="@color/add_button_green"
        android:layout_weight="0.07"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

   <FrameLayout
       android:id="@+id/content_parent"
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:layout_below="@+id/titleTextView"
       android:layout_alignParentEnd="true" />

</RelativeLayout>
