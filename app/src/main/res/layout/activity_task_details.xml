<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cse120.ontask.TaskDetailsActivity"
    android:background="@color/light_gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/taskTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/input_gray"
        android:layout_below="@+id/staticTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/taskDescription"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/input_gray"
        android:layout_below="@+id/staticDescription"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/taskDeadline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/input_gray"
        android:layout_below="@+id/staticDeadline"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/taskUrgency"
        android:layout_marginLeft="10dp"
        android:background="@color/input_gray"
        android:layout_below="@+id/staticUrgency"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Title:"
        android:id="@+id/staticTitle"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/taskTitle"
        android:autoText="false"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/staticDescription"
        android:layout_below="@+id/taskTitle"
        android:layout_alignStart="@+id/taskTitle"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Deadline:"
        android:id="@+id/staticDeadline"
        android:layout_below="@+id/taskDescription"
        android:layout_alignStart="@+id/taskDescription"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Urgency:"
        android:id="@+id/staticUrgency"
        android:layout_below="@+id/taskDeadline"
        android:layout_alignStart="@+id/taskDeadline"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Task"
        android:id="@+id/updateButton"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/staticTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Task"
        android:id="@+id/deleteButton"
        android:layout_alignTop="@+id/updateButton"
        android:layout_toEndOf="@+id/updateButton"
        android:layout_marginStart="36dp" />
</RelativeLayout>
