<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cse120.ontask.ChooseTaskOrProject"
    android:background="@color/light_gray">

    <Button
        android:layout_width="@dimen/choose_task_or_project_button_dim"
        android:layout_height="@dimen/choose_task_or_project_button_dim"
        android:text="@string/task"
        android:id="@+id/chooseTaskButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="chooseTaskButtonOnClick"
        android:layout_margin="20dp" />

    <Button
        android:layout_width="@dimen/choose_task_or_project_button_dim"
        android:layout_height="@dimen/choose_task_or_project_button_dim"
        android:text="@string/project"
        android:id="@+id/chooseProjectButton"
        android:onClick="chooseProjectButtonOnClick"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/chooseTaskButton"
        android:layout_toEndOf="@+id/chooseTaskButton" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/light_blue"
        android:layout_alignParentEnd="true"
        android:paddingBottom="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/chooseActivityBackButton"
            android:onClick="chooseActivityBackButtonOnClick"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/chooseTaskOrProject"
            android:id="@+id/chooseTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>
