<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cse120.ontask.ChooseTaskOrProject">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/light_blue"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <com.cse120.ontask.custom_shapes.CircleButton
            android:id="@+id/chooseActivityBackButton"
            android:layout_width="60dp"
            android:layout_height="53dp"
            android:onClick="chooseActivityBackButtonOnClick"
            android:src="@drawable/ic_action_back"
            app:cb_color="@color/add_button_green"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/chooseTaskOrProject"
            android:id="@+id/chooseTextView"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:layout_width="145dp"
            android:layout_height="136dp"
            android:id="@+id/chooseTaskButton"
            android:onClick="chooseTaskButtonOnClick"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="@drawable/taskbutton"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:largeHeap="true"/>

        <Button
            android:layout_width="145dp"
            android:layout_height="136dp"
            android:id="@+id/chooseProjectButton"
            android:onClick="chooseProjectButtonOnClick"
            android:layout_alignTop="@+id/chooseTaskButton"
            android:layout_toEndOf="@+id/chooseTaskButton"
            android:background="@drawable/projectbutton"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:largeHeap="true"/>

    </LinearLayout>

</RelativeLayout>
